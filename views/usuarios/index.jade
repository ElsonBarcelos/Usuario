extends ../layout
block content
 h1 Pag Usuarios
 hr
 br
 a(href="/usuarios/create" title="Cadastrar",class="btn btn-success") Cadastrar
 br
 if messages.info
  div(class="alert alert-info")
   p=messages.info
 br
 table(class="table well")
  thead
   tr
     th ID:
     th Nome:
     th Email:
     th Login:
     th Senha:
     th Seat:
     th Data:
     th Acoes:
   tbody
    each valor, i in lista
     tr
       td #{valor._id}
       td #{valor.nome}
       td #{valor.email}
       td #{valor.login}
       td #{valor.senha}
       td #{valor.seat}
       td #{valor.data_cad}
       td
        a(href="/usuarios/edit/#{valor._id}",title="Editar",class="btn btn-info")
         span(class="glyphicon glyphicon-pencil")
        &nbsp 
        a(href="/usuarios/show/#{valor._id}",title="Editar",class="btn btn-primary")
         span(class="glyphicon glyphicon-search")