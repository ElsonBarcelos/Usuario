extends ../layout
block content
 h1 Alterar Usuario
 hr
 br
 form(method="POST",action="/usuarios/edit/#{value._id}",role="form")
  input(type="hidden" name="_method" value="put")
  div(class="form-group")
   label Nome:
   input(type="text",name="nome",class="form-control",value="#{value.nome}")
  div(class="form-group")
   label Email:
   input(type="text",name="email",class="form-control",value="#{value.email}")
  div(class="form-group")
   label Login:
   input(type="text",name="login",class="form-control",value="#{value.login}")
  div(class="form-group")
   label Seat:
   input(type="text",name="seat",class="form-control",value="#{value.seat}")
  input(type="submit",value="Atualizar",class="btn btn-success")
 br
 br
 a(href="/usuarios" title="voltar") voltar